<h1>Cat Rental Form</h1>

<form action= "<%= cat_rental_requests_url %>" method="post">
  <label for="cat_id">Cat ID: </label>
  <select name="cat_rental_request[cat_id]" id="cat_id">
    <% cat_ids.each do |id|%>
      <option value=<%= id %>>cat id: <%= id %></option>
    <% end %>
  </select>

  <br>

  <label for="start_date">Start Date:</label>
  <input type="date" name="cat_rental_request[start_date]" value="<%= req.start_date%>">

  <label for="end_date">End Date:</label>
  <input type="date" name="cat_rental_request[end_date]" value="<%= req.end_date%>">

  <br>

  <input type="submit" value='Rent Cat'>
</form>
