<% url = controller == :user ?  users_url : session_url  %>

<div class="col-lg-6 col-lg-offset-3">
  <h3><%= button_text.upcase %></h3>

  <form action="<%= url %>" method="post">
    <input type="hidden" name="_method" value="<%= action %>">
    <%= auth_token %>

    <div class="form-group row">
      <label for="email">email: </label>
      <input class='form-control' type="text" name="<%= controller %>[email]" value="<%= user.email if user %>">
    </div>

    <div class="form-group row">
      <label for="password">Password: </label>
      <input class='form-control' type="password" name="<%= controller %>[password]" >
    </div>

    <div class="form-group row">
      <input class='btn btn-success' type="submit" value="<%= button_text %>">
    </div>
  </form>
</div>
