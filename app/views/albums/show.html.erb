<h2>'<%= @album.name %>' <small>Album Page</small> </h2>
<hr>

<h4> Band:
<%= link_to @album.band_name, band_url(@album.band), class: 'label label-primary' %>
</h4>

<ul class="list-group">

  <% @album.tracks.each_with_index do |track, idx| %>
    <a href="<%= track_url(track) %>" class="list-group-item">
      Track<%= idx + 1 %>: &nbsp&nbsp&nbsp&nbsp&nbsp<%= track.name %>
    </a>
  <% end %>

</ul>

<%= link_to 'Add Track', new_album_track_url(params[:id]), class:'btn btn-success' %>
<br>
<br>
<%= button_to 'Delete Album', album_url(@album), method: :delete, class: 'btn btn-danger' %>
