<% http = action == :new ? :post : :patch %>
<% url = action == :new ? notes_url : edit_note_url(note) %>

<form action="<%= url %>" method="post">

  <input type="hidden" name="_method" value="<%= http %>">
  <%= auth_token %>

  <input type="hidden" name="note[user_id]" value="<%= current_user.id %>">
  <input type="hidden" name="note[track_id]" value="<%= params[:id] %>">

  <div class="form-group row">
    <textarea name="note[body]" rows="8" cols="80"></textarea>
  </div>

  <div class="form-group row">
    <input type="submit" value="Add note">
  </div>

</form>
