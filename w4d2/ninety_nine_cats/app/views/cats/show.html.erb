<h1> <%= @cat.name %> </h1>

<table style='border: 1px solid black'>
  <tr>
    <th>Color</th>
    <th>Sex</th>
    <th>Birth Date</th>
    <th>Age</th>
    <th>description</th>
  </tr>
  <tr>
    <td><%= @cat.color %></td>
    <td><%= @cat.sex %></td>
    <td><%= @cat.birth_date %></td>
    <td><%= @cat.age %></td>
    <td><%= @cat.description %></td>
  </tr>
</table>


<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

  <% @cat.cat_rental_requests.each do |req| %>
    <tr>
      <td><%= req.start_date %></td>
      <td><%= req.end_date %></td>
      <td><%= req.status %></td>
      <td>
        <% if req.status == 'PENDING' %>
          <%= button_to 'Approve!', cat_rental_request_url(req), method: :patch %>
        <% else %>
          None
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
